{
  "appId": "com.2skydev.lolps",
  "productName": "LOL.PS Desktop",
  "protocols": {
    "name": "lolps",
    "schemes": [
      "lolps"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "2skydev",
      "repo": "LOL.PS-Desktop"
    }
  ],
  "asar": true,
  "win": {
    "target": "nsis",
    "icon": "resources/icons/logo@256.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "resources/icons/logo@512.png"
  },
  "nsis": {
    "oneClick": true,
    "artifactName": "LOL.PS-Desktop-Setup-${version}.${ext}",
    "uninstallDisplayName": "LOL.PS-Desktop"
  },
  "extraResources": [
    "./resources/**"
  ],
  "directories": {
    "output": "release/"
  }
}