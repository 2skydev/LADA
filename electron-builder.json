{
  "appId": "com.2skydev.lada",
  "productName": "LADA",
  "protocols": {
    "name": "lada",
    "schemes": ["lada"]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "2skydev",
      "repo": "LADA"
    }
  ],
  "asar": true,
  "win": {
    "target": "nsis",
    "icon": "resources/icons/logo@256.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "resources/icons/logo@512.png"
  },
  "nsis": {
    "oneClick": true,
    "artifactName": "LADA-Setup-${version}.${ext}",
    "uninstallDisplayName": "LADA"
  },
  "extraResources": ["./resources/**"],
  "directories": {
    "output": "release/"
  },
  "files": ["dist/**/*", "dist-electron/**/*"]
}
