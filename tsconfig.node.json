{
  "extends": "./tsconfig.base.json",
  "include": [
    "electron.vite.config.*",
    "package.json",
    "src/main/**/*",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "types": [
      "node",
      "electron-vite/node"
    ],
    "paths": {
      "@main/*": [
        "src/main/*"
      ]
    }
  }
}